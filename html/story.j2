{% extends "base.j2" %}

{% block title %}{{ story.title }}{% endblock %}

{% block content %}
    <div class="story">
        <div class="cover">
            {% if story.cover %}
            {# Render the story image #}
            <img src="{{ story.cover }}" alt="{{ story.title }}">
            {% endif %}
            <div>
            <a href="{{ story.url }}"><h1>{{ story.title }}</h1></a>
            {# Render the story author #}
            {% include "widgets/author.j2" %}
            </div>
        </div>
{#        <hr>#}
        {# Render the tags #}
        <div class="chips">
        {% for tag in story.tags %}
            <a class="chip" href="https://www.wattpad.com/stories/{{ tag }}">#{{ tag }}</a>
        {% endfor %}
        </div>
        {# Render the story description #}
        <div class="description">
        {# split story.description at each newline character #}
        {% for paragraph in story.description.split('\n') %}
            {% if paragraph.strip() != "" %}
                <p>{{ paragraph }}</p>
            {% endif %}
        {% endfor %}
        </div>
    </div>
    {# Line Break #}
    <hr>
    {# Render the story comments #}
{% endblock %}